<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fibredariane.horoscope.chinois.biorythmeETRES.Activities.ViewBinomeFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin" >

                <TextView
                    android:id="@+id/text_view_binome_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENERGIE"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                 <TextView
                    android:id="@+id/text_view_binome_expl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description binome "
                    android:layout_gravity="center"
                     android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textAlignment="center"
                    />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_binome"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/bois_arbre_grande_foret" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/text_view_nom_binome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arbre dans la grande forÃªt"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />
                    <TextView
                        android:id="@+id/text_view_polarite_binome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YANG"
                        android:textColor="@color/green" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/text_view_desc_binome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Texte Binome" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>