<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fibredariane.horoscope.chinois.biorythmeETRES.Activities.ViewBiorythmeFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_binome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:src="@drawable/bois_arbre_grande_foret_mini" />

                <TextView
                    android:id="@+id/text_view_nom_binome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arbre dans la grande forÃªt"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/green" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_layout_element"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_element_binome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fab_margin"

                    android:layout_marginRight="@dimen/fab_margin"
                    android:src="@drawable/bois_mini" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_element_binome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/fab_margin"
                        android:text="BOIS" />

                    <TextView
                        android:id="@+id/text_view_element_polarite_binome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YANG" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_element_mot_cle1_binome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:text="CREATIVITE" />

                    <TextView
                        android:id="@+id/text_view_element_mot_cle2_binome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMMUNICATION" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_desc_binome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/binome1" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>